// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["news", "weather", "stats"]
}

// region: news schema

model article {
  id        Int        @id @default(autoincrement())
  headline  String
  link      String
  image     String
  published DateTime
  saved     DateTime   @default(now())
  publisher publishers

  @@index([publisher, saved])
  @@map("articles")
  @@schema("news")
}

enum publishers {
  Chattanoogan
  FoxChattanooga
  WDEF
  TimesFreePress
  ChattanoogaPulse
  ChattNewsChronicle
  Local3News

  @@schema("news")
}

// endregion

// region: weather schema

model weather_entries {
  location           weather_locations @id
  temp               Decimal
  humidity           Int
  weatherCode        Int
  weatherDescription String
  sunrise            DateTime
  sunset             DateTime
  windSpeed          Decimal
  windDirection      wind_directions

  @@schema("weather")
}

enum wind_directions {
  N
  NNE
  NE
  ENE
  E
  ESE
  SE
  SSE
  S
  SSW
  SW
  WSW
  W
  WNW
  NW
  NNW

  @@schema("weather")
}

enum weather_locations {
  Airport
  CoolidgePark
  Downtown
  EastBrainerd
  EastRidge
  Harrison
  Hixson
  NorthChattanooga
  RedBank
  SignalMountain
  SoddyDaisy
  Southside

  @@schema("weather")
}

// endregion

// region: stats

model stat {
  id           Int        @id @default(autoincrement())
  publisher    publishers
  numPublished Int
  numRelevant  Int
  dateSaved    DateTime   @default(now())

  @@index([publisher, dateSaved])
  @@map("stats")
  @@schema("stats")
}

// endregion
