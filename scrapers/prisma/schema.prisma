// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
  schemas  = ["News", "Weather", "Stats"]
}

// region: news schema

model Article {
  id        Int        @id @default(autoincrement())
  headline  String
  link      String
  image     String
  published DateTime
  saved     DateTime   @default(now())
  publisher Publishers

  @@index([publisher, saved])
  @@map("Articles")
  @@schema("News")
}

enum Publishers {
  Chattanoogan
  FoxChattanooga
  WDEF
  TimesFreePress
  ChattanoogaPulse
  ChattNewsChronicle
  Local3News

  @@schema("News")
}

// endregion

// region: weather schema

model Weather {
  location           WeatherLocations @id
  temp               Decimal
  humidity           Int
  weatherCode        Int
  weatherDescription String
  sunrise            DateTime
  sunset             DateTime
  windSpeed          Decimal
  windDirection      WindDirections

  @@schema("Weather")
}

enum WindDirections {
  N
  NNE
  NE
  ENE
  E
  ESE
  SE
  SSE
  S
  SSW
  SW
  WSW
  W
  WNW
  NW
  NNW

  @@schema("Weather")
}

enum WeatherLocations {
  Airport
  CoolidgePark
  Downtown
  EastBrainerd
  EastRidge
  Harrison
  Hixson
  NorthChattanooga
  RedBank
  SignalMountain
  SoddyDaisy
  Southside

  @@schema("Weather")
}

// endregion

// region: stats

model stat {
  id           Int        @id @default(autoincrement())
  publisher    Publishers
  numPublished Int
  numRelevant  Int
  dateSaved    DateTime   @default(now())

  @@index([publisher, dateSaved])
  @@map("Stats")
  @@schema("Stats")
}

// endregion
